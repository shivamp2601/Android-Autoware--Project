<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_ServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#eee"
            android:gravity="center"
            android:text="Book Service"
            android:textSize="40dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/ServiceStationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:typeface="serif"
            android:textStyle="italic"
            android:textSize="16dp"

            />

        <LinearLayout
            android:id="@+id/linear_layout_Car_List"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <EditText
            android:id="@+id/edittext_cust_service_description"
            android:layout_width="match_parent"
            android:textSize="22dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Enter Description of the Service"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Switch
            android:id="@+id/towing_switch"
            android:layout_width="match_parent"
            android:background="#AAffffff"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:text="Towing Service"
            android:textSize="22dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book_service"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom"
            android:padding="10dp"
            android:text="Book Service"
            android:textSize="24dp" />


    </LinearLayout>



</FrameLayout>