<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:layout_height="match_parent"
        tools:context=".AddCarActivity">


        <TextView
            android:id="@+id/addcar_textview"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#6AE6E5E5"
            android:text="ADD CAR" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Addcar_TextLayout1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:hint="Registration Number">

            <EditText
                android:id="@+id/RegistrationNumber"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Addcar_TextLayout2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Brand">

            <EditText
                android:id="@+id/CarBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Addcar_TextLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Model">

            <EditText
                android:id="@+id/CarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="236dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/Petrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Petrol"

                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Diesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel"

                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/CNG_LPG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CNG_LPG"

                android:textSize="20dp" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Add_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:background="@drawable/custom"
            android:text="Add car" />
    </LinearLayout>

</FrameLayout>